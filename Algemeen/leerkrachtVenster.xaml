<Window x:Class="leren.leerkrachtVenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1024" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,3.4,0.4">
        <ComboBox x:Name="Combobox1" HorizontalAlignment="Left" Margin="48,45,0,0" VerticalAlignment="Top" Width="333"  SelectionChanged="ComboBox_SelectionChanged" Height="29" Background="Black" Loaded="combobox1">


        </ComboBox>
        <Button Content="Geef punten weer" HorizontalAlignment="Left" Margin="48,107,0,0" VerticalAlignment="Top" Width="128" Height="22" Click="Button_Click"/>
        <Label Content="Selecteer leerling" HorizontalAlignment="Left" Margin="48,10,0,0" VerticalAlignment="Top" Width="333" FontSize="15"/>
        <Button Content="Verwijderen" HorizontalAlignment="Left" Margin="208,107,0,0" VerticalAlignment="Top" Width="129" Height="22"/>
        <ListBox Name="leerlingListBox" HorizontalAlignment="Left" Height="305" Margin="471,22,0,0" VerticalAlignment="Top" Width="485" RenderTransformOrigin="0.5,0.5">
        </ListBox>
        <Label Content="Selecteer een vak" HorizontalAlignment="Left" Margin="48,363,0,0" VerticalAlignment="Top" FontSize="15"/>
        <ComboBox Name="vakkenListBox" HorizontalAlignment="Left" Margin="56,398,0,0" VerticalAlignment="Top" Width="281" SelectionChanged="vakkenListBox_SelectionChanged"/>
        <ComboBox Name="oefeningListBox" HorizontalAlignment="Left" Margin="56,569,0,0" VerticalAlignment="Top" Width="281" SelectionChanged="oefeningListBox_SelectionChanged"/>
        <Button Name="editButton" Content="Aanpassen" HorizontalAlignment="Left" Margin="262,617,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.353,0.051" Click="editButton_Click"/>
        <Button Name="addButton" Content="Toevoegen" HorizontalAlignment="Left" Margin="782,674,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="deleteButton" Content="Verwijderen" HorizontalAlignment="Left" Margin="881,674,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Selecteer een oefening" FontSize="15" HorizontalAlignment="Left" Margin="56,538,0,0" VerticalAlignment="Top" Width="195"/>
        <Label Content="Vraag" FontSize="15" HorizontalAlignment="Left" Margin="471,363,0,0" VerticalAlignment="Top" Height="30" Width="60"/>
        <TextBox Name="vraagTextBox" IsEnabled="False" HorizontalAlignment="Left" Height="23" Margin="586,370,0,0" Text=" " TextWrapping="Wrap"  VerticalAlignment="Top" Width="370"/>
        <Label Content="Antwoorden" FontSize="15" HorizontalAlignment="Left" Margin="471,437,0,0" VerticalAlignment="Top"/>
        <Label Content="Juiste index" FontSize="15" HorizontalAlignment="Left" Margin="471,602,0,0" VerticalAlignment="Top"/>
        <TextBox Name="juisteTextBox" IsEnabled="False" HorizontalAlignment="Left" Height="23" Margin="586,605,0,0" Text=" " TextWrapping="Wrap"  VerticalAlignment="Top" Width="69"/>
        <ListBox Name="antwoordenListBox" IsEnabled="False" HorizontalAlignment="Left" Height="125" Margin="586,443,0,0" VerticalAlignment="Top" Width="370"/>
        <Button Name="nieuwButton" Content="Nieuw" HorizontalAlignment="Left" Margin="262,447,0,0" VerticalAlignment="Top" Width="75" Click="nieuwButton_Click"/>

    </Grid>
</Window>
